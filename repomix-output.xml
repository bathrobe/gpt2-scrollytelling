  useEffect(() => {
    if (isRunning) {
      if (activeStep < 3) {
        const timer = setTimeout(() => {
          setActiveStep(prev => prev + 1)
        }, 1200)
        return () => clearTimeout(timer)
      } else if (activeStep === 3) {
        setSyncPhase(true)
        const timer = setTimeout(() => {
          setActiveStep(0)
          setSyncPhase(false)
          setIsRunning(false)
        }, 2000)
        return () => clearTimeout(timer)
      }
    }
  }, [activeStep, isRunning])

  const handleStart = () => {
    setActiveStep(0)
